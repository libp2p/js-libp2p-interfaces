{
  "include": ["src/**/*.js"],
  "exclude": ["src/**/tests/*", "src/utils"],

  "compilerOptions": {
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    "strict": true,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./src"
  }
}
